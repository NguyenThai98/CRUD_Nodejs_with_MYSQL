<div class="card">
    <div class="card-header d-flex justify-content-around">
        <h3>Products</h3>
        <a  class="btn btn-primary" href="/admin/products/add" role="button">@addProducts</a>
    </div>
    <div class="card-body">
        {{#if this.empty}}
        <p>Không có dữ liệu</p>
        {{else}}
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>ProID</th>
                    <th>ProName</th>
                    <th>TinyDes</th>
                    {{!-- <th>FullDes</th> --}}
                    <th>Price</th>
                    <th>CatID</th>
                    <th>Quantity</th>
                    <th>editProducts</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.listProducts}}
                <tr>
                    <td>{{ProID}}</td>
                    <td>{{ProName}}</td>
                    <td>{{TinyDes}}</td>
                    {{!-- <td>{{FullDes}}</td> --}}
                    <td>{{Price}}</td>
                    <td>{{CatID}}</td>
                    <td>{{Quantity}}</td>
                    <td>
                        <a  class="btn btn-primary" href="/admin/products/edit?id={{CatID}}" role="button" title="edit products">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>